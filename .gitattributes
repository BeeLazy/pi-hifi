# Auto-detect text files and ensure consistent LF endings by default
* text=auto eol=lf

# Explicitly enforce LF for config and documentation files
*.sh         text eol=lf
*.bash       text eol=lf
*.py         text eol=lf
*.conf       text eol=lf
*.service    text eol=lf
*.md         text eol=lf
*.yml        text eol=lf
*.yaml       text eol=lf
*.json       text eol=lf
*.html       text eol=lf
*.css        text eol=lf
*.scss       text eol=lf
*.js         text eol=lf
*.ts         text eol=lf
*.tsx        text eol=lf
*.jsx        text eol=lf
*.xml        text eol=lf
*.toml       text eol=lf
*.ini        text eol=lf
*.gitignore  text eol=lf
.gitkeep     text eol=lf
.gitattributes text eol=lf

# Enforce CRLF specifically for Windows-only scripts
*.bat        text eol=crlf
*.cmd        text eol=crlf

# Treat binary files as binary to prevent line ending conversions
*.png        binary
*.jpg        binary
*.jpeg       binary
*.gif        binary
*.ico        binary
*.pdf        binary
*.zip        binary
*.gz         binary
*.tar        binary
*.bz2        binary
*.xz         binary
*.7z         binary
*.exe        binary
*.dll        binary
*.otf        binary
*.ttf        binary
*.woff       binary
*.woff2      binary